<!--components/my-book/my-book.wxml-->
<view class='book-container'>
    <view class='type-container'>
      <view class='item-container'>
        <text class='type-text'>{{book_type}}</text>
      </view>
    </view>
    <view class='info-container'>
      <v-info item='预约角色' value='{{role}}'></v-info>
    </view>
    <view class='info-container'>
      <v-info item='会议主题' value='{{meeting_topic}}'></v-info>
    </view>
    <view class='info-container'>
      <v-info item='会议时间' value='{{meeting_time}}'></v-info>
    </view>
    <view class='info-container'>
      <v-info item='会议地点' value='{{meeting_location}}'></v-info>
    </view>
</view>