<!--components/activity-publish/publish.wxml-->
<view class='book-container'>
    <view class='info-container'>
      <v-picker item='俱乐部' array='{{club_array}}'></v-picker>
    </view>
    <view class='info-container'>
      <v-picker item='会议类型' array='{{meeting_type_array}}'></v-picker>
    </view>
    <view class='info-container'>
      <v-input item='会议主题' placeholder_text='{{meeting_topic}}'></v-input>
    </view>
    <view class='info-container'>
      <v-picker item='会议时间' array='{{meeting_time_array}}'></v-picker>
    </view>
    <view class='info-container'>
      <v-input item='会议地点' placeholder_text='{{meeting_location}}'></v-input>
    </view>
    <view class='info-container'>
      <v-input item='分享嘉宾' placeholder_text='{{guest}}'></v-input>
    </view>
</view>