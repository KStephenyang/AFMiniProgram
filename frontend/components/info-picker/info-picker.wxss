/* components/info-picker/info-picker.wxss */
.container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:600rpx;
  height:60rpx;
  background-color: white
}
.box-container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width:100%;
  height:100%;
}

.item-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width:80%;
  height:100%;
}
.item-reshape{
  font-size: 30rpx;
  color: grey
}
.value-container{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width:100%;
  height:100%;
}
.value-reshape{
  font-size: 30rpx;
  color: #141414
}